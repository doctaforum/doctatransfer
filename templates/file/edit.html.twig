{% extends 'layout.html.twig' %}

{% block title %}Edit File{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('assets/css/upload-file.css') }}">
{% endblock %}

{% block section %}
    <div class="center-container container-fluid pt-0">
        <div class="section-top-header-page d-flex justify-content-between align-items-center mb-5 w-100">
            <div class="d-flex justify-content-start align-items-center">
                <a href="{{ path('file_index') }}" class="section-top-header-page__return-button"><i class="fas fa-chevron-circle-left fa-2x"></i></a>
    
                <h1 class="center-container__title px-3">Editar archivo</h1>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <div class="mx-2" style="font-size: 0.85em;">
                    {{ include('file/_isActive_form.html.twig') }}
                </div>
                {{ include('file/_delete_form.html.twig') }}
            </div>
        </div>

        {{ include('file/_form.html.twig', {'button_label': 'Actualizar'}) }}
    </div>
{% endblock %}
