{% extends 'base.html.twig' %}

{% block title %}Download index{% endblock %}

{% block body %}
    <h1>Download index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for download in downloads %}
            <tr>
                <td>{{ download.id }}</td>
                <td>{{ download.date ? download.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('download_show', {'id': download.id}) }}">show</a>
                    <a href="{{ path('download_edit', {'id': download.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('download_new') }}">Create new</a>
{% endblock %}
